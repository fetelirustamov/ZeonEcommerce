@model ZeonEcommerce.Models.Suppliers
@{
    ViewBag.Title = "AdminAccount";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-heading" style="font-size:20px;margin-left:50px;">
                <h2>Hesabınızı Yeniləyin</h2>
            </div>
            <div class="card-body">
                <form id="form-horizontal"action="@Url.Action("AdminAccount","AdminHome")" method="post" class="form-horizontal">
                    <input type="hidden" name="SuppliersId" value="@Model.SuppliersId" />
                    <div class="form-group">
                        <label for="nameInput" class="col-sm-2 control-label">Adınız</label>
                        <div class="col-sm-10">
                            <input id="nameInput" type="text" name="Name" value="@Model.Name"  data-rule-required="true" minlength="2" class="form-control" aria-required="true">
                        </div>
                    </div>
                  <div class="form-group">
                        <label for="nameInput" class="col-sm-2 control-label">Soy Adınız</label>
                        <div class="col-sm-10">
                            <input id="nameInput" type="text" name="SurName" value="@Model.SurName" data-rule-required="true" minlength="2" class="form-control" aria-required="true">
                        </div>
                    </div>
                  <div class="form-group">
                        <label for="nameInput" class="col-sm-2 control-label">Şirkət</label>
                        <div class="col-sm-10">
                            <input id="nameInput" type="text" name="Company" value="@Model.Company" minlength="2" class="form-control" >
                        </div>
                    </div>
                  <div class="form-group">
                        <label for="nameInput" class="col-sm-2 control-label">Şəhər</label>
                        <div class="col-sm-10">
                            <input id="nameInput" type="text" name="City" value="@Model.City" minlength="2" class="form-control" >
                        </div>
                    </div>
                 <div class="form-group">
                        <label for="nameInput" class="col-sm-2 control-label">Küçə</label>
                        <div class="col-sm-10">
                            <input id="nameInput" type="text" name="Street" value="@Model.Street" data-rule-required="true" minlength="2" class="form-control" aria-required="true">
                        </div>
                    </div>
                 
                    <div class="form-group">
                        <label for="emailInput" class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            <input id="emailInput" type="email" name="Email" value="@Model.Email" data-rule-required="true" data-rule-rangelength="[10,30]" data-rule-email="true" class="form-control" aria-required="true">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="passInput" class="col-sm-2 control-label">Şifrəniz</label>
                        <div class="col-sm-10">
                            <input type="text" name="Password" placeholder="Şifrənizi Daxil Edin" class="form-control" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassInput" class="col-sm-2 control-label">Yeni Şifrəniz</label>
                        <div class="col-sm-10">
                            <input id="passInput" type="text" name="NewPassword" placeholder="Yeni Şifrənizi Daxil Edin" minlength="6" data-rule-equalto="#passInput" class="form-control" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassInput" class="col-sm-2 control-label">Təkrar Yeni Şifrəniz</label>
                        <div class="col-sm-10">
                            <input id="confirmPassInput" type="text" name="ConfirmNewPassword" placeholder="Yeni Şifrənizi Təkrar Daxil Edin" minlength="6" data-rule-equalto="#passInput" class="form-control" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="websiteInput" class="col-sm-2 control-label">Telefon</label>
                        <div class="col-sm-10">
                            <input id="websiteInput" type="tel" name="Phone" value="@Model.Phone"  class="form-control" >
                        </div>
                    </div>
                   <div class="form-group">
                        <label for="websiteInput" class="col-sm-2 control-label">Web Sayt</label>
                        <div class="col-sm-10">
                            <input id="websiteInput" type="text" name="WebSite" value="@Model.WebSite"  class="form-control" >
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">Yenilə</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
