@model ZeonEcommerce.Models.Settings
<div class="header">
    <div class="container-fluid">
        <div class="header-top-info">
            <ul class="header-top-socials">
                <li><a href="#"><i class="icon-160" title="161"></i></a></li>
                <li><a href="#"><i class="icon-138" title="161"></i></a></li>
                <li><a href="#"><i class="icon-106" title="161"></i></a></li>
                <li><a href="#"><i class="icon-169" title="161"></i></a></li>
                <li><a href="#"><i class="icon-163" title="161"></i></a></li>
            </ul>
            <i class="icon-264"> </i> @Model.Email
        </div>
        <div class="header-middle-info">
            <div class="col-md-3 col-sm-3">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/Public/Zeon/images/elements/logo.png" alt="site logo" />
                    </a>
                </div>
            </div>
            <div class="col-md-5 col-sm-5">
                <form class="search-form" action="@Url.Action("Products","Home")" method="get">
                    <input type="text" class="search-input" placeholder="Axtar" name="s" required />
                    <button type="submit" value="AXTAR" class="search-submit">AXTAR</button>

                </form>
            </div>
            <div class="col-md-4 col-sm-4">
                <ul class="header-middle-account">
                    @if (Session["CurrentUser"] != null)
                    {
                        <li><a href="@Url.Action("Account","Home")"><i class="icon-330"></i> Hesabım</a></li>
                        <li><a href="javascript:void(0)" class="LogOut"><i class="icon-475"></i> Çıxış</a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Login","Home")"><i class="icon-474" title="Login"></i> Giriş</a></li>
                    }


                    <li>

                        @{Html.RenderAction("MiniCartWidget", "Home");}
                    </li>
                </ul>

            </div>
            <div class="clear"></div>
        </div>
        @{ Html.RenderAction("Menu", "Home");}
    </div>
</div>

<script src="~/Public/Zeon/js/jquery-2.2.0.min.js"></script>
<script>
    $(document).ready(function myfunction() {
        $(".LogOut").click(function myfunction() {

            $.ajax({
                type: "GET",
                url: "/Home/LogOut",

                success: function myfunction() {
                    window.location.reload();
                },
                error: function myfunction() {
                    alert("Xəta oldu!");
                }
            });
        });
    });

</script>