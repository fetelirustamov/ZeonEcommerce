@model IEnumerable<ZeonEcommerce.Models.Images>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="card card-data-tables customer-table-wrapper">
            <header class="card-heading">
                <h2 class="card-title">Məhsullar</h2>
                <small class="dataTables_info"></small>
                <ul class="card-actions icons right-top">
                    <li id="deleteItems" style="display: none;">
                        <span class="label label-info pull-left m-t-5 m-r-10 text-white"></span>
                        <a href="javascript:void(0)" id="confirmDelete" data-toggle="tooltip" data-placement="top" data-original-title="Delete Product(s)">
                            <i class="zmdi zmdi-delete"></i>
                        </a>
                    </li>
                </ul>
            </header>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table id="orderTable" class="mdl-data-table customer-table m-t-30" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th data-orderable="false" class="col-xs-1">
                                    <span class="checkbox">
                                        <label>
                                            <input type="checkbox" value="" id="checkAll">
                                            <span class="checkbox-material"></span>
                                        </label>
                                    </span>
                                </th>
                                <th class="col-xs-3">Slider Şəkli</th>
                               
                                <th class="col-xs-3">Sıra Nömrəsi</th>
                                <th class="col-xs-3">Əməliyyatlar</th>
                                <th data-orderable="false" class="col-xs-3"><a href="@Url.Action("HomeSlider","SliderImages")"><button class="btn btn-primary btn-fab  animate-fab"><i class="zmdi zmdi-plus"></i></button></a></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="checkbox-cell">
                                        <span class="checkbox">
                                            <label>
                                                <input type="checkbox" value="" id="">
                                                <span class="checkbox-material"></span>
                                            </label>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="name block m-t-10 m-b-10"><img src="~/@item.HomeSlider" alt="slider" style="width:50px;height:50px" /></span>
                                    </td>
                                    <td>@item.RowNo </td>
                                    <td>
                                        <a href="@Url.Action("DeleteImage","SliderImages",new { id=item.ImagesId})"><i class="zmdi zmdi-delete  zmdi-hc-2x"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

