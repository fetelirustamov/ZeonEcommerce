@model ZeonEcommerce.Models.OurTeam
@{
    ViewBag.Title = "EditTeams";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-xs-12 col-md-10 " style="margin-left:110px">
        <div class="card p-b-20 p-b-20">
            <header class="card-heading ">
                <h2 class="card-title">Komandamıza Düzəliş Et</h2>

            </header>
            <div class="card-body card-container">
                <form id="EditTeams" action="@Url.Action("EditTeams","OurTeams")" method="post" class="form-horizantal" enctype="multipart/form-data">

                    <div class="form-group is-empty">
                        <label for="name" class="col-md-2 control-label">Adı</label>
                        <div class="col-md-10">
                            <input id="Name" type="text" class="form-control" value="@Model.Name" name="Name">
                        </div>
                    </div>

                    <input name="OurTeamId" type="hidden" class="form-control" value="@Model.OurTeamId">

                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Vəzifəsi</label>
                        <div class="col-md-10">
                            <input id="Job" type="text" class="form-control" name="Job" value="@Model.Job">
                        </div>
                    </div>
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Facebook</label>
                        <div class="col-md-10">
                            <input id="Facebook" type="text" class="form-control" name="Facebook" value="@Model.Facebook">
                        </div>
                    </div>

                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Twitter</label>
                        <div class="col-md-10">
                            <input id="Twitter" type="text" class="form-control" name="Twitter" value="@Model.Twitter">
                        </div>
                    </div>
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Linkedin</label>
                        <div class="col-md-10">
                            <input id="Linkedin" type="text" class="form-control" name="Linkedin" value="@Model.Linkedin">
                        </div>
                    </div>
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Google</label>
                        <div class="col-md-10">
                            <input id="Google" type="text" class="form-control" name="Google" value="@Model.Google">
                        </div>
                    </div>
                    <div class="form-group is-empty">
                        <label class="col-md-2 control-label">Haqqımızda</label>
                        <div class="col-md-10">
                            <textarea id="About" class="form-control" name="About">@Model.About</textarea>
                        </div>
                    </div>


                    <div class="form-group is-empty">
                    </div>
                    <div class="form-group is-empty">
                        <div class="input-group">
                            <label class="col-md-2 control-label ">Şəkil</label>
                            <input type="file" class="form-control" id="Picture" name="Picture" multiple>
                            <div class="input-group col-md-10">
                                <input type="text" readonly="" class="form-control" name="Picture" placeholder="Şəkil Yüklə">
                                <span class="input-group-btn input-group-sm">
                                    <button type="button" class="btn btn-primary btn-sm">
                                        File
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group is-empty">

                        <div class="col-md-10">
                            <button type="submit" class="upload btn btn-primary ">Dəyiş</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
