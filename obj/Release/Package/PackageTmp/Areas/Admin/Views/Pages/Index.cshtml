@model IEnumerable<ZeonEcommerce.Models.Pages>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="card card-data-tables customer-table-wrapper">
            <header class="card-heading">
                <h2 class="card-title">Səhifələr</h2>
                <small class="dataTables_info"></small>
                <ul class="card-actions icons right-top">
                    <li id="deleteItems" style="display: none;">
                        <span class="label label-info pull-left m-t-5 m-r-10 text-white"></span>
                        <a href="javascript:void(0)" id="confirmDelete" data-toggle="tooltip" data-placement="top" data-original-title="Delete Product(s)">
                            <i class="zmdi zmdi-delete"></i>
                        </a>
                    </li>
                </ul>
            </header>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table id="orderTable" class="mdl-data-table customer-table m-t-30" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th data-orderable="false" class="col-xs-1">
                                    <span class="checkbox">
                                        <label>
                                            <input type="checkbox" value="" id="checkAll">
                                            <span class="checkbox-material"></span>
                                        </label>
                                    </span>
                                </th>
                                <th class="col-xs-2">Adı</th>
                                <th class="col-xs-2">Başlığı</th>
                                <th class="col-xs-2">Url</th>
                                <th class="col-xs-1">Şəkli</th>

                                <th class="col-xs-1">Sıra No</th>
                                <th class="col-xs-2">Əməliyyatlar</th>
                                <th data-orderable="false" class="col-xs-2"><a href="@Url.Action("Addpages","Pages")"><button class="btn btn-primary btn-fab  animate-fab"><i class="zmdi zmdi-plus"></i></button></a></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="checkbox-cell">
                                        <span class="checkbox">
                                            <label>
                                                <input type="checkbox" value="" id="">
                                                <span class="checkbox-material"></span>
                                            </label>
                                        </span>
                                    </td>
                                    <td>@item.Name</td>
                                    <td>
                                        @if (@item.Title.Length > 30)
                                        {
                                            @item.Title.Substring(0, 30) <span>..</span>
                                        }
                                        else
                                        {
                                            @item.Title
                                        }
                                    </td>
                                    <td>

                                        @item.Url

                                    </td>
                                    <td><img src="~/@item.Picture" style="width:50px;height:50px" alt="Alternate Text" /></td>
                                    <td>@item.RowNo</td>
                                    <td>
                                        <a href="@Url.Action("EditPages","Pages",new { id=item.Id})"><i class="zmdi zmdi-edit zmdi-hc-2x"></i></a>&nbsp; &nbsp; &nbsp;
                                        <a href="@Url.Action("Delete","Pages",new { id=item.Id})"><i class="zmdi zmdi-delete  zmdi-hc-2x"></i></a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
