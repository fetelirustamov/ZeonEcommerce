@model IEnumerable<ZeonEcommerce.Models.Settings>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="card card-data-tables customer-table-wrapper">
            <header class="card-heading">
                <h2 class="card-title">Saytın Ayarları</h2>
                <small class="dataTables_info"></small>
                <ul class="card-actions icons right-top">
                    <li id="deleteItems" style="display: none;">
                        <span class="label label-info pull-left m-t-5 m-r-10 text-white"></span>
                        <a href="javascript:void(0)" id="confirmDelete" data-toggle="tooltip" data-placement="top" data-original-title="Delete Product(s)">
                            <i class="zmdi zmdi-delete"></i>
                        </a>
                    </li>
                </ul>
            </header>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table id="orderTable" class="mdl-data-table customer-table m-t-30" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th data-orderable="false" class="col-xs-1">
                                    <span class="checkbox">
                                        <label>
                                            <input type="checkbox" value="" id="checkAll">
                                            <span class="checkbox-material"></span>
                                        </label>
                                    </span>
                                </th>
                                <th class="col-xs-1">Açıqlama</th>
                                <th class="col-xs-1">Logo</th>
                                <th class="col-xs-1">Telefon</th>
                                <th class="col-xs-1">Email</th>
                                <th class="col-xs-1">Faks</th>
                                <th class="col-xs-1">Şəhər</th>
                                <th class="col-xs-1">Adress</th>
                                <th class="col-xs-1">Facebook </th>
                                <th class="col-xs-1">Twitter </th>
                                <th class="col-xs-1">İnstagram</th>
                                <th class="col-xs-1">Youtube</th>
                                <th class="col-xs-1">Google </th>
                                <th data-orderable="false" class="col-xs-1"><button class="btn btn-primary btn-fab  animate-fab"><i class="zmdi zmdi-plus"></i></button></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="checkbox-cell">
                                        <span class="checkbox">
                                            <label>
                                                <input type="checkbox" value="" id="">
                                                <span class="checkbox-material"></span>
                                            </label>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <span class="name block m-t-10 m-b-10">@item.Title</span>
                                        </div>
                                    </td>
                                    <td>@item.Logo </td>
                                    <td>@item.Phone </td>
                                    <td>@item.Email </td>
                                    <td>@item.Fax </td>
                                    <td>@item.City </td>
                                    <td>@item.Adress </td>
                                    <td>@item.Facebook </td>
                                    <td>@item.Twitter </td>
                                    <td>@item.Instagram </td>
                                    <td>@item.Youtube </td>
                                    <td>@item.Google </td>
                                    <td>
                                        <a href="@Url.Action("Edit","Settings",new { id=item.Id})"><i class="zmdi zmdi-edit zmdi-hc-2x"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

