@model ZeonEcommerce.Models.Products
@{
    ViewBag.Title = "ProductSlider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<row>
    <div class="col-xs-12 col-sm-12" style="position:relative">
        <div class="card">
            <header class="card-heading">
                <h2 class="card-title">Məhsulun Slider Şəkillərin Yüklə </h2>

            </header>
            <div class="card-body">
                <form action="@Url.Action("AddImages","SliderImages")" method="post" class="dropzone" id="product_add_images_form" enctype="multipart/form-data">
                    <input type="hidden" name="ProductsID" value="@ViewBag.ProductID" />
                    <div class="fallback">
                        <input type="file" name="ProductSlider" multiple />
                    </div>
                </form>
            </div>
        </div>

        <a href="@Url.Action("Index","Products")" style="padding:0,50px;" class="btn btn-danger">Məhsullara Ged</a>
    </div>
</row>
<row>
    <div class="content-body page-gallery m-t-30">
        <div id="photo-gallery" class="gallery row" itemscope itemtype="http://schema.org/ImageGallery">
            @foreach (var item in Model.Images)
            {
                <figure class="col-xs-6 col-sm-3" itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject">
                    <div class="card image-over-card m-t-30">
                        <div class="card-image">
                            <a href="~/@item.ProductSlider" data-caption="<div class='text-center'>Place your caption here.<br><em class='text-muted'><i class='zmdi zmdi-favorite'></i> Material Wrap</em></div>" data-width="1600" data-height="1068" itemprop="contentUrl">
                                <img src="~/@item.ProductSlider?w=600&h=650" itemprop="thumbnail" alt="Image description">
                            </a>
                        </div>
                        <div class="card-body">
                            <div>
                                <div class="col-md-8">
                                    <h4 class="card-title text-center">@Model.Name</h4>
                                </div>
                                <div class="col-md-4">
                                    <h4 class="card-title text-center"> <i class="zmdi zmdi-delete ImageDelete" data-id="@item.ImagesId" style="cursor:pointer;">  Sil </i></h4>
                                </div>
                            </div>
                            
                           
                            <h6 class="category text-gray text-center"><span>@Model.CreateTime.ToString("dd MMM yy") </span></h6>
                        </div>
                    </div>
                </figure>
            }

        </div>
    </div>
</row>
           
<!-- Root element of PhotoSwipe. Must have class pswp. -->
<div class="pswp" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="pswp__bg"></div>
    <div class="pswp__scroll-wrap">
        <div class="pswp__container">
            <div class="pswp__item"></div>
            <div class="pswp__item"></div>
            <div class="pswp__item"></div>
        </div>
        <div class="pswp__ui pswp__ui--hidden">
            <div class="pswp__top-bar">
                <div class="pswp__counter"></div>
                <button class="pswp__button pswp__button--close" title="Close (Esc)"></button>
                <button class="pswp__button pswp__button--share" title="Share"></button>
                <button class="pswp__button pswp__button--fs" title="Toggle fullscreen"></button>
                <button class="pswp__button pswp__button--zoom" title="Zoom in/out"></button>
                <div class="pswp__preloader">
                    <div class="pswp__preloader__icn">
                        <div class="pswp__preloader__cut">
                            <div class="pswp__preloader__donut"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="pswp__share-modal pswp__share-modal--hidden pswp__single-tap">
                <div class="pswp__share-tooltip"></div>
            </div>
            <button class="pswp__button pswp__button--arrow--left" title="Previous (arrow left)"></button>
            <button class="pswp__button pswp__button--arrow--right" title="Next (arrow right)"></button>
            <div class="pswp__caption">
                <div class="pswp__caption__center"></div>
            </div>
        </div>
    </div>
</div>

<script>
    $(Document).on("click", ".ImageDelete",function () {
        var id = $(this).data("id");
            $.ajax({
                url: '@Url.Action("DeleteImage", "Products")',
                data: id,
                type: "POST",
                success: function () {
                    alert("Şəkil Silindi");
                },
                error: function () {
                    alert("Products");
                },
            
                
            });
        });
</script>
