@model ZeonEcommerce.Models.Settings
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12 col-md-10" style="margin-left:110px">
        <div class="card p-b-20" style="height:730px">
            <header class="card-heading ">
                <h2 class="card-title">Saytın Ayarlarına Düzəliş Et</h2>

            </header>
            <div class="card-body card-container">
                <form action='@Url.Action("Edit","Settings")' method="post" class = "form-horizantal" enctype="multipart/form-data">
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Açıqlama</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="Title" value="@Model.Title">
                        </div>
                    </div>
                    
                    <div class="form-group ">
                        <div class="form-group is-empty">
                            <div class="input-group">
                                <label class="col-md-2 control-label ">Logo</label>
                                <input type="file" class="form-control" id="Picture" name="logo">
                                <div class="input-group col-md-10">
                                    <input type="text" readonly="" class="form-control" placeholder="Şəkil Yüklə">
                                    <span class="input-group-btn input-group-sm">
                                        <button type="button" class="btn btn-primary btn-sm">
                                            File
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Telefon</label>
                        <div class="col-md-10">
                            <input type="tel" class="form-control" name="Phone" value="@Model.Phone">
                        </div>
                    </div>
                    
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Email</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="Email" value="@Model.Email">
                        </div>
                    </div>
                    
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Fax</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="Fax" value="@Model.Fax">
                        </div>
                    </div>
                    
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Şəhər</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="City" value="@Model.City">
                        </div>
                    </div>
                    
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Ünvan</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="Adress" value="@Model.Adress">
                        </div>
                    </div>
                    
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Facebook</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="Facebook" value="@Model.Facebook">
                        </div>
                    </div>
                    
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">İnstagram</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="Instagram" value="@Model.Instagram">
                        </div>
                    </div>
                    
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Youtube</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="Youtube" value="@Model.Youtube">
                        </div>
                    </div>
                    
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Google+</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="Google" value="@Model.Google">
                        </div>
                    </div>
                    
                    <div class="form-group is-empty">
                        <label for="inputEmail" class="col-md-2 control-label">Twitter</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="Twitter" value="@Model.Twitter">
                        </div>
                    </div>
                    
                     <div class="form-group is-empty">

                        <div class="col-md-10">
                            <button type="submit" class="btn btn-primary ">Əlavə Et</button>
                        </div>
                    </div>
                 </form>
            </div>
        </div>
    </div>
</div>


