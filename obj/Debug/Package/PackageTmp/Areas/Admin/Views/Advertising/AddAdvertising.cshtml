
@{
    ViewBag.Title = "AddAdvertising";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xs-12 col-md-10" style="margin-left:110px">
        <div class="card p-b-20">
            <header class="card-heading ">
                <h2 class="card-title">Reklam Əlavə Et</h2>

            </header>
            <div class="card-body card-container">
                <form id="AddAdvertising"  action="@Url.Action("AddAdvertising","Advertising")" method="post" class="form-horizantal" enctype="multipart/form-data">

                    <div class="form-group is-empty">
                        <label for="name" class="col-md-2 control-label">Sıra Nömrəsi</label>
                        <div class="col-md-10">
                            <input name="RowNo" type="number" class="form-control" placeholder="Sıra Nömrəsi">
                        </div>
                    </div>
                    <div class="form-group is-empty">
                        <div class="input-group">
                            <label class="col-md-2 control-label ">Şəkil</label>
                            <input type="file" class="form-control" id="Picture" name="Picture" multiple>
                            <div class="input-group col-md-10">
                                <input type="text" readonly="" class="form-control" name="Picture" placeholder="Şəkil Yüklə">
                                <span class="input-group-btn input-group-sm">
                                    <button type="button" class="btn btn-primary btn-sm">
                                        File
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group is-empty">

                        <div class="col-md-10">
                            <button type="submit" class="btn btn-primary">Əlavə Et</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

